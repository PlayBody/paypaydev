
{% extends '@admin/default_frame.twig' %}

{% set menus = ['store', 'plugin', 'plugin_list'] %}

{% block title %}{{ 'ALIJ.admin.config.title'|trans }}{% endblock %}
{% block sub_title %}{{ 'ALIJ.admin.config.sub_title'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block stylesheet %}

{% endblock stylesheet %}

{% block main %}
    <form role="form" method="post">

        {{ form_widget(form._token) }}

        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header"><span>{{ 'ALIJ.admin.config.header'|trans }}</span></div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-3"><span>{{ 'ALIJ.admin.config.siteId'|trans }}</span><span
                                            class="badge badge-primary ml-1">{{ 'ALIJ.admin.config.required'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.siteId) }}
                                    {{ form_errors(form.siteId) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>{{ 'ALIJ.admin.config.sitePassword'|trans }}</span><span
                                            class="badge badge-primary ml-1">{{ 'ALIJ.admin.config.required'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.sitePassword) }}
                                    {{ form_errors(form.sitePassword) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>{{ 'ALIJ.admin.config.serverIP'|trans }}</span><span
                                            class="badge badge-primary ml-1">{{ 'ALIJ.admin.config.required'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.serverIP) }}
                                    {{ form_errors(form.serverIP) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"></div>
                                <div class="col mb-2"><span>{{ 'ALIJ.admin.config.IPInfo'|trans }}</span></div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>{{ 'ALIJ.admin.config.useTest'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.useTest) }}
                                    {{ form_errors(form.useTest) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>{{ 'ALIJ.admin.config.useCont'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.useCont) }}
                                    {{ form_errors(form.useCont) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>{{ 'ALIJ.admin.config.useQuick'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.useQuick) }}
                                    {{ form_errors(form.useQuick) }}
                                </div>
                            </div>
                            <div class="row"><div class="col-8"><span>{{ 'ALIJ.admin.config.useInfo'|trans }}</span></div></div>
                            <div class="row">
                                <div class="col-3"><span>{{ 'ALIJ.admin.config.useAmountCheck'|trans }}</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.useAmountCheck) }}
                                    {{ form_errors(form.useAmountCheck) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="c-beseLink"
                               href="{{ url('admin_store_plugin') }}">
                                <i class="fa fa-backward" aria-hidden="true"></i>
                                <span>{{ 'ALIJ.admin.config.back'|trans }}</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5"
                                        type="submit">{{ 'ALIJ.admin.config.save'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}