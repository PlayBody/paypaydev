
{% block stylesheet %}
    <style>
        .render_image{
            display: none;
            width: 300px;
            height: 300px;
            background-size: contain;
            background-position: center;
            background-repeat: no-repeat;
        }
        .product_comment{
            position: absolute;
            bottom: 10px;
            font-size: 24px;
            color: #000000;
            padding: 0px 20px;
            width: 100%;
            background-color: rgb(255,255,255, 0.4);
            line-height: 35px;
        }
    </style>
{% endblock %}
{% for item in data %}
{% if item['image'] == 'point_back.png' %}
    <div class="render_image" style="background-image: url('{{ asset('LuckyBag4/assets/img/point_back.png', 'plugin') }}');">
        <div class="product_comment">
            <b>{{ item['points'] }}</b>
        </div>
    </div>
{% else %}
    <div class="render_image" style="background-image: url('{{ asset( item['image'] , 'save_image') }}');">

        <div class="product_comment">
            <b>{{ item['ProductClass'].Product.name }}</b>/
            {{ item['ProductClass'].code }}/
            {{ item['ProductClass'].ClassCategory1.name }}
        </div>
    </div>
{% endif %}

{% endfor %}